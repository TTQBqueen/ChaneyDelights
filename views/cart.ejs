  <script>
     function Remove() {
        document.getElementById("table-display").style.display = "none";
        document.getElementById("cartTotalPrice").innerHTML = "$0.00";
   }
   function checkout() {
       alert("Thank you for shopping with us");
       document.getElementById("table-display").style.display = "none";
       document.getElementById("cartTotalPrice").innerHTML = "$0.00";
   }
  </script>

