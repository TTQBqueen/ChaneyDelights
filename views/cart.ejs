                <td><button onclick="Remove()" id="remove">x</button></td>
            </tr>
            <!-- Add more rows for other items in the cart -->
        </tbody>
    </table>
</div>



        <div id = "cartTotal">
            <div id = "cartTotalTitle"><u>Total</u></div>
